{
  "name": "Go",
  "image": "golang:1.25.1-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "18" }
  },
  "postCreateCommand": "CGO_ENABLED=1 go install -tags extended github.com/gohugoio/hugo@v0.149.1 && cd website && npm install",

  // ⬇️ NEU: Agent-Forwarding statt ~/.ssh binden
  "mounts": [
    "source=/run/host-services/ssh-auth.sock,target=/ssh-agent,type=bind"
  ],
  "containerEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  }

  // optional:
  // "remoteUser": "vscode"
}
